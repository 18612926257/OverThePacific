<script src="js/res-operations.js"></script>

<style>
    .p_solid_thin {border-style: solid; padding: 10px; border-color: #CDCDCD; border-width: thin; margin-left: 500px; margin-right: 500px}

    .button {
        background-color:#D6D6D6;
        border: none;
        color: black;
        padding: 8px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 60%;
        margin: 4px 2px;
        cursor: pointer;
    }
    .button {border-radius: 12px;}
    .button1 {
        background-color:#D6D6D6;
        border: none;
        color: black;
        padding: 8px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 60%;
        margin: 6px 3px;
        cursor: pointer;
    }
    .button1 {border-radius: 12px;}
    .Input_Box {
        width: 395px;
        height: 100px;
        border: 1px solid #ccc;
        transition: border linear .2s, box-shadow linear .5s;
        border-radius: 5px;
        background-color:#ECECEC;
        overflow: hidden;
        position: absolute;
    }
    .Input_Box>textarea {
        width: 390px;
        height: 90px;
        padding: 2px;
        outline: none;
        border: 0px solid #fff;
        resize: none;
        font: 13px;
        color: #C7C7C7;
        -moz-border-radius: 5px;
        -webkit-border-radius: 5px;
        border-radius: 5px;
    }
    input {
        display: none;
    }

    label {
        cursor: pointer;
        font-size: 20px;
        color: darkgray;
        display: block;
        width: 30px;
        height: 30px;
        line-height: 5px;
        text-align: center;
        float: left;
        -moz-transition: all 0.2s;
        -o-transition: all 0.2s;
        -webkit-transition: all 0.2s;
        transition: all 0.2s;

    }
    label:hover {
        font-size: 20px;
        color: darkgray;
        text-shadow: 0 0 1px #b9c9d8;
    }
    label:before {
        display: inline;
        width: auto;
        height: auto;
        line-height: normal;
        vertical-align: baseline;
        margin-top: 0;
        font-family: FontAwesome;
        font-weight: normal;
        font-style: normal;
        text-decoration: inherit;
        -webkit-font-smoothing: antialiased;
        content: "\f005";
    }

    input:checked + label ~ label:before {
        content: "\f006";
    }

    #wrapper {
        display: inline-block;
    }
    #wrapper:hover label:before {
        content: "\f005";
    }
    #wrapper:hover label:hover ~ label:before {
        content: "\f006";
    }
    .class1{
        display: inline;
        font-size: 250%;
        margin-left: 50px;
        margin-top: 60px;

    }
    .class2{
        display: inline;
        font-size: 150%;
        margin-left: 60px;
        margin-top: 60px;
    }
    .class3{
        display: inline;
        font-size: 70%;
        color: darkgray;
        line-height: 50px;
        margin-left: 60px;
    }

    .line{
        width: 380px;
        height: 1px;
        background: black;
    }
    .comment{
        margin-top: 20px;

    }
    .class4{
        display: inline;
        font-size: 90%;
        color: black;
        line-height: 50px;
        margin-left: 150px;

    }
    .class4:hover{
        border-bottom: 1px solid black;
        cursor: pointer;
    }


</style>

<div class="rest-info">
    <div class="p_solid_thin"   style="width: 400px; height: 160px; margin-top: 10px">
        <img src="https://gimg2.baidu.com/image_search/src=http%3A%2F%2Fbpic.588ku.com%2Felement_origin_min_pic%2F18%2F04%2F01%2Fd54a6b612fe9476c0a18b4dfabfd419f.jpg&refer=http%3A%2F%2Fbpic.588ku.com&app=2002&size=f9999,10000&q=a80&n=0&g=0n&fmt=jpeg?sec=1633632489&t=cdce2d75cd2db85803f4f33aee082182"ï¼›width="500px"; height="160px">
        <span style="float: right; margin-right: 50px; line-height: 5px">
		<p style="font-size: 120%; color: black" class="restaurantName" business_id={{restaurant.business_id}}>{{restaurant.name}}</p>
		<p style="font-size: 100%; color: #525252">Cuisine</p>
		<p style="font-size: 100%; color: #525252">Opening Hours</p>
		<p style="font-size: 100%; color: #525252">Address</p>
		<button class="button">Navigation</button>
			</span>
    </div>
</div>
<div class="rest-rating">
    <div class="p_solid_thin" style="width: 400px; height:180px; margin-top: 10px">
        <button class="button1" style="float: right; margin-right: 5px; margin-top: 155px; line-height: 10px">Submit</button>
        <div class="Input_Box" style="margin-top: 40px">
            <textarea class="Input_text" placeholder="Add your comments here, less than 300 words."></textarea>

        </div>
        <link rel="stylesheet" type="text/css" href="http://www.jq22.com/jquery/font-awesome.4.6.0.css">
        <div id="wrapper" >
            <input type="radio" class="stars" id="1" name="star" />
            <label for="star1" class="lables"></label>
            <input type="radio" class="stars" id="2" name="star" />
            <label for="star2" class="lables"></label>
            <input type="radio" class="stars" id="3" name="star" />
            <label for="star3" class="lables" ></label>
            <input type="radio" class="stars" id="4" name="star" />
            <label for="star4" class="lables" ></label>
            <input type="radio" class="stars" id="5" name="star"/>
            <label for="star5" class="lables"></label>
        </div>
    </div>
</div>


<div class="comments">
    <div class="p_solid_thin" style="width: 400px; height: 500px; margin-top: 10px">
        <div class="class1">{{restaurant.stars}} </div>
        <div class="class2">{{reviewsNum}} comments</div>
        <div class="line"></div>

        {{#each reviews}}
        <div class="comment">
            <div class="class2">{{this.text}}</div>
            <br>
            <div class="class3">By {{this.name}}</div>
            <div class="class3">{{this.date}}</div>
            <div class="line"></div>
        </div>
        {{/each}}

        <div class="class4">More comments</div>

    </div>
</div>

