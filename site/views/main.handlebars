<script src="/js/location.js"></script>

<body>
    <div class="nav_container ">

    <nav class="navbar navbar-default" >
        <div class="container-fluid" style="display: flex; flex-direction: row; align-items: center" >
            <!--    location        -->
            <div class="location navbar-form" style="display: flex; flex-direction: row; align-items: center">
                <div class="locationIcon">
                    <img src="./icon/location.png" alt="location" width="25px">
                </div>
                <div class="locationSelect form-group navbar-form" style="margin-right: 10px">
                    <label>
                        <select class="selectPicker show-tick form-control" id="citySelect" onchange="selectOnchange()">
<!--                            <option value="">Select</option>-->
                            <option class="city" value="Las Vegas">Las Vegas</option>
                            <option class="city" value="Phoenix">Phoenix</option>
                            <option class="city" value="Toronto">Toronto</option>
                            <option class="city" value="Charlotte">Charlotte</option>
                            <option class="city" value="Scottsdale">Scottsdale</option>
                        </select>
                    </label>
                </div>
            </div>

            <div class="navbar-header">
                <a class="navbar-brand" href="#">Restaurants</a>
            </div>
            <form action="./search" method="post" class="navbar-form navbar-left">
                <div class="form-group">
                    <input type="text" class="form-control" name="search" id="txtSearch" placeholder="Search">
                </div>
                <button type="submit" class="btn btn-default">Search</button>
            </form>
        </div>
    </nav>
</div>

<!-- All restaurants by Cara -->
<div id="restaurants_container">
{{#if restaurants}}
    {{#each restaurants}}
        <div id="restaurant_card" onclick="window.location='/details?{{this.business_id}}'" >
            <div class="restaurant_detail">
                <h2>{{this.name}}</h2>
                <h4 class="sub_text">Address: {{this.address}} </h4>
                <p class="sub_text">Open time: {{this.time}}</p>
            </div>
            <div>
                <h3>{{this.stars}}</h3>
                <h6>{{this.review_count}} reviews</h6>

            </div>
        </div>
    {{/each}}
{{else}}
    <p>No restaurants!</p>
{{/if}}

</div>
</body>
